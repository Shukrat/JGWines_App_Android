<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/winesinRegionLL"
    android:background="@color/backgroundColor"
    android:weightSum="3"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/regionBackground"
        android:elevation="4dp">
        <TextView
            android:id="@+id/regionName_RegionsList"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="20dp"
            android:paddingStart="15dp"/>

        <Button
            android:text="@string/showWinesButton"
            android:id="@+id/regionButton_RegionsList"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:padding="5dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvWinesinRegion"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>