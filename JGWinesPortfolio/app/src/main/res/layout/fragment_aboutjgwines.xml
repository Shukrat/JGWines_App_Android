<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/annecatherine"

        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_jgwdescription"
        android:text="John Given Wines was founded in 1997, by John and Anne Catherine Given"
        android:textSize="20sp"
        android:textAlignment="center"

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/john"

        android:layout_margin="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_jgwremember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>