<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:weightSum="4"
        >

        <Button
            android:id="@+id/button_newVintages"
            android:text="New Vintages"
            android:onClick="switchFragment"

            android:background="@color/black"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginRight="1pt"
            />

        <Button
            android:id="@+id/button_regions"
            android:text="Regions"
            android:onClick="switchFragment"

            android:background="@color/white"
            android:textColor="@color/black"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginRight="1pt"
            />

        <Button
            android:id="@+id/button_allWines"
            android:text="All Wines"
            android:onClick="switchFragment"

            android:background="@color/white"
            android:textColor="@color/black"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginRight="1pt"
            />

        <Button
            android:text="About &#xA;JG Wines"
            android:id="@+id/button_aboutJGWines"
            android:onClick="switchFragment"

            android:background="@color/white"
            android:textColor="@color/black"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginRight="1pt"
            />
    </LinearLayout>

    <ScrollView
    android:id="@+id/fragmentsGoHere"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>